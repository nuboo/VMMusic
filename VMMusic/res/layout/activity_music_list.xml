<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include
        layout="@layout/public_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/music_list_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/music_list_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/choose_music_button_dawable"
            android:gravity="center"
            android:text="单曲"
            android:textColor="@drawable/public_button_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/music_list_singer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:button="@null"
            android:checked="false"
            android:drawableBottom="@drawable/choose_music_button_dawable"
            android:gravity="center"
            android:text="歌手"
            android:textColor="@drawable/public_button_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/music_list_cd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:button="@null"
            android:checked="false"
            android:drawableBottom="@drawable/choose_music_button_dawable"
            android:gravity="center"
            android:text="专辑"
            android:textColor="@drawable/public_button_text_color"
            android:textSize="18sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/music_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>