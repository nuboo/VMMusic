<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regist_background">
    <!--登录注册页面-->
    <!--登录注册选择-->
    <RadioGroup
        android:id="@+id/login_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="登录"
            android:textColor="@drawable/radio_button"
            android:textSize="25sp"
            android:checked="true"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@color/white" />

        <RadioButton
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="注册"
            android:textColor="@drawable/radio_button"
            android:textSize="25sp" />
    </RadioGroup>


    <!-- 登录-->
    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/thirty">

        <EditText
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:background="@drawable/edit_text_selocter"
            android:drawableLeft="@drawable/user_name"
            android:drawablePadding="@dimen/fifteen"
            android:hint="用户名"
            android:inputType="number"
            android:padding="@dimen/fifteen" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:alpha="0.4"
            android:background="@drawable/edit_text_selocter"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/fifteen"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="@dimen/fifteen" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/code_shape"
            android:gravity="center"
            android:text="进入VM"
            android:textColor="@color/white" />
    </LinearLayout>

    <!--注册-->
    <LinearLayout
        android:id="@+id/register_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/thirty"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:background="@drawable/edit_text_selocter"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/fifteen"
                android:hint="请输入手机号"
                android:padding="@dimen/fifteen" />

            <TextView
                android:id="@+id/register_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/register_phone"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/register_phone"
                android:background="@drawable/code_shape"
                android:gravity="center"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen"
                android:text="获取验证码" />
        </RelativeLayout>

        <EditText
            android:id="@+id/register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:alpha="0.4"
            android:background="@drawable/edit_text_selocter"
            android:drawableLeft="@drawable/verification"
            android:drawablePadding="@dimen/fifteen"
            android:hint="请输入验证码"
            android:padding="@dimen/fifteen" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:alpha="0.4"
            android:background="@drawable/edit_text_selocter"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/fifteen"
            android:hint="请输入密码"
            android:padding="@dimen/fifteen" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/code_shape"
            android:gravity="center"
            android:text="VM注册"
            android:textColor="@color/white" />
    </LinearLayout>

    <!--第三方登录-->
    <LinearLayout
        android:id="@+id/third_party_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/fifteen"
            android:text="第三方快速登录" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen">

            <TextView
                android:id="@+id/qq_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty"
                android:background="@drawable/qq"
                android:gravity="center" />

            <TextView
                android:id="@+id/wb_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/wb"
                android:gravity="center" />

            <TextView
                android:id="@+id/wx_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/thirty"
                android:background="@drawable/wx"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>