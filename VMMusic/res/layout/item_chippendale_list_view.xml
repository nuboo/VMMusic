<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">
    <!--关注页面item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.vmmusic.app.customview.RoundImageView
            android:id="@+id/item_chippendale_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chippendale_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VM"
                android:textColor="@color/font_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_chippendale_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="03-01 12:00"
                android:textColor="@color/light_grey"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_chippendale_list_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/attention_background" />

        <TextView
            android:id="@+id/item_chippendale_list_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/collection" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_chippendale_list_background"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chippendale_list_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.53"
                android:background="#000000"
                android:drawableLeft="@drawable/left_of_the_line"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="11dp"
                android:paddingRight="13dp"
                android:paddingTop="3dp"
                android:text="WE LIKE 2 PARTY"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_chippendale_list_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:alpha="0.53"
                android:background="#000000"
                android:drawableLeft="@drawable/left_of_the_line"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="11dp"
                android:paddingRight="13dp"
                android:paddingTop="5dp"
                android:text="BIG BANG"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_chippendale_list_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_chippendale_list_background"
            android:layout_alignRight="@id/item_chippendale_list_background"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/play_button"
            android:button="@null" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/item_chippendale_list_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_chippendale_list_background"
        android:focusable="true"
        android:maxHeight="4.0dp"
        android:minHeight="4.0dp"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:id="@+id/item_chippendale_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:text="鲫鱼"
        android:textColor="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/item_chippendale_list_thumb_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/thumb_up"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="5万" />
        </TableRow>


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_color" />

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/item_chippendale_list_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comments"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="1.5万" />
        </TableRow>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_color" />

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/item_chippendale_list_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="2万" />
        </TableRow>
    </LinearLayout>
</LinearLayout>