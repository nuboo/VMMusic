<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:paddingLeft="90dp"
    android:paddingRight="90dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/search_music"
            android:layout_centerInParent="true"
            android:gravity="center"

            android:layout_centerHorizontal="true"
            >
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/search_hot"
                android:textSize="25sp"
                android:textColor="@drawable/public_button_text_color"
                android:button="@null"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/search_hot" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/green"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/search_history"
                android:textSize="25sp"
                android:textColor="@drawable/public_button_text_color"
                android:button="@null"
                android:layout_height="wrap_content"
                android:id="@+id/search_history"
                android:checked="false" />
        </RadioGroup>
        </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:gravity="start|center_vertical"
        android:drawableRight="@drawable/search"
        android:textColorHint="@color/hint_color"
        android:hint="@string/search_hint"
        android:id="@+id/search_blank" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/green"/>


    <EditText
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:gravity="start|center_vertical"
        android:drawableLeft="@drawable/history"
        android:textColorHint="@color/green"
        android:hint="@string/search_blank_history"
        android:id="@+id/search_hot_or_history" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/green"/>

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cancle_xx"
        android:id="@+id/cancle_xx"/>
</LinearLayout>