<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">
    <!--频道页面-->
    <include
        layout="@layout/public_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/channel_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="73dp"
                android:layout_marginTop="19dp"
                android:drawableLeft="@drawable/chippendale_parting_line"
                android:drawableRight="@drawable/chippendale_parting_line"
                android:gravity="center"
                android:text="频道分类"
                android:textColor="@color/font_name"
                android:textSize="17dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <GridView
                        android:id="@+id/horizontal_grid"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:listSelector="#00000000"
                        android:numColumns="auto_fit"
                        android:scrollbars="none"
                        android:stretchMode="spacingWidthUniform" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="73dp"
                android:layout_marginTop="19dp"
                android:drawableLeft="@drawable/chippendale_parting_line"
                android:drawableRight="@drawable/chippendale_parting_line"
                android:gravity="center"
                android:text="全部分类"
                android:textColor="@color/font_name"
                android:textSize="17dp" />

            <!-- android:listSelector="#00000000" 去掉点击item时的黄色底色-->
            <com.example.vmmusic.app.customview.ReWriteGridView
                android:id="@+id/channel_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="-13dp"
                android:listSelector="#00000000"
                android:numColumns="2" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>