<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/lyrics_song"
            android:gravity="center"
            android:textSize="30sp"
            android:text="我的"
            />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:id="@+id/playing_right"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/back"/>

        <TextView
            android:id="@+id/playing_left"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/lyrics_top_right"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="111"
        android:textColor="@color/white"
        android:id="@+id/lyrics_singer"
        android:gravity="center"
        android:alpha="0.7"/>
    <!--歌词-->
    <com.example.vmmusic.app.customview.LrcTextView
        android:layout_marginTop="45dp"
        android:text="lyrics"
        android:textColor="@color/font_name"
        android:textSize="25sp"
        android:singleLine="false"
        android:ellipsize="marquee"

        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <!--收藏-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/lyrics_collection"

            android:drawableTop="@drawable/public_collect"
            android:button="@null"/>
        <!--分享-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/lyrics_share"
            android:drawableTop="@drawable/public_vm_share"
            android:button="@null"/>
        <!--下载-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/lyrics_download"

            android:drawableTop="@drawable/public_download"
            android:button="@null"/>
        <!--随机播放-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/lyrics_play_type"
            android:drawableTop="@drawable/lyrics_play"
            android:button="@null"/>
        </LinearLayout>
</LinearLayout>