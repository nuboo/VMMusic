<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--音乐馆-->

    <ListView
        android:id="@+id/chippendale_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <!--推荐-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="73dp"
                android:layout_marginTop="19dp"
                android:drawableLeft="@drawable/chippendale_parting_line"
                android:drawableRight="@drawable/chippendale_parting_line"
                android:gravity="center"
                android:text="每日推荐"
                android:textSize="17dp" />


            <com.example.vmmusic.app.customview.ReWriteGridView
                android:id="@+id/chippendale_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:numColumns="2" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>