<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vmmusic"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <!--引导页-->
        <activity
            android:name=".app.activity.GuidePage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页面-->
        <activity android:name=".app.activity.HomePageActivity" />
        <!--登录注册-->
        <activity android:name=".app.activity.RegisterLoginActivity" />
        <!--选择音乐-->
        <activity android:name=".app.activity.ChooseMusicActivity" />
        <!--搜索-->
        <activity android:name=".app.activity.SearchActivity" />
        <!--更多-->
        <activity android:name=".app.activity.MoreAndMoreActivity" />
    </application>

</manifest>