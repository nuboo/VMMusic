<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vmmusic"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <!-- 读写SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">

        <!-- 空白页入口 -->
        <activity
            android:name="com.example.vmmusic.app.activity.FirstPage"
             android:launchMode="singleTop">
        <!--     <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>

        <!-- 主页面 -->
        <activity
            android:name="com.example.vmmusic.app.activity.HomePageActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">

        </activity>

        <!-- 引导页面 -->
        <activity
            android:name="com.example.vmmusic.app.activity.GuidePage"
            android:launchMode="singleTop" />
        <!-- 登录注册 -->
        <activity
            android:name="com.example.vmmusic.app.activity.RegisterLoginActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <!-- 音乐列表 -->
        <activity
            android:name="com.example.vmmusic.app.activity.MusicListActivity"
            android:launchMode="singleTop"></activity>
        <!--播放音乐服务-->
        <service android:name=".app.utils.MusicService"></service>

        <!--专辑歌手分类详细-->


        <activity
            android:name="com.example.vmmusic.app.activity.MoreListActivity"
            android:launchMode="singleTop"></activity>
        <!--音乐播放界面-->
        <activity
            android:name="com.example.vmmusic.app.activity.MusicLyricPlayActivity"

            android:launchMode="singleTop"></activity>
        <!--搜索-->

        <activity android:name="com.example.vmmusic.app.activity.SearchActivity"
            android:launchMode="singleTop"/>
        <!--更多-->
        <activity android:name="com.example.vmmusic.app.activity.MoreAndMoreActivity"
            android:launchMode="singleTop"/>

        <activity android:name="com.example.vmmusic.app.activity.ChannelClassificationActivity"
            android:launchMode="singleTop" />
		
    </application>

</manifest>